@using PizzaDeliveryWebApplication.Models
@model OrderModel

@{
    ViewBag.Title = "ConfirmOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
    double itemPrice = 0;
}

<h2>Thank you for shopping with us.</h2>
<br />
<h3>Your order is confirmed!</h3>
<br />
@if (Model != null)
{
<h3>Order Number is : @Model.OrderId</h3>
<h3>Please contact us at <abbr title="Phone">(503)-000-0123</abbr> to track the order.</h3>
}
<br />
<div>
    <table>
        @if (Model != null)
        {
            <tr>
                <td><h4>Order Summary:</h4></td>
            </tr>
            foreach (var item in Model.Items)
            {
                itemPrice = (double.Parse(item.Quantity.ToString())) * item.ItemPrice;

                <tr>

                    <td>
                        <img src="@Url.Content(item.ItemImageUrl)"
                             style="max-height:100px;max-width:100px" />
                    </td>
                    <td>
                        <h4>@item.ItemName</h4>
                    </td>
                    <td>
                        <h4> X @item.Quantity = </h4>
                        @*<input type="text" id="txtQuantity+@item.ItemId" value="@item.Quantity" style="max-width:50px;" readonly="readonly" />*@
                        </td>
                    <td>
                        <h4>$@itemPrice</h4>
                    </td>
                </tr>
            }
            <tr>
                <td> </td>
                <td></td>
                <td><h4>Total:</h4></td>
                <td><h4>$@Model.OrderAmount</h4></td>
            </tr>
        }

    </table>
</div>